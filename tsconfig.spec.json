/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "node",
      "jest",
      "@testing-library/jest-dom",
      "testing-library__jest-dom"
    ],
    "paths": {
      "@assets/*": [
        "./src/assets/*"
      ],
      "@env/*": [
        "./src/environments/*"
      ],
      "@core/*": [
        "./src/app/core/*"
      ],
      "@modules/*": [
        "./src/app/modules/*"
      ],
      "@pages/*": [
        "./src/app/pages/*"
      ],
      "@shared/*": [
        "./src/app/shared/*"
      ],
      "@layout/*": [
        "./src/app/layout/*"
      ],
      "@app/*": [
        "./src/app/*"
      ]
    },
  },
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}